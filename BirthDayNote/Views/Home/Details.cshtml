@model DomainLayer.ViewModels.BirthdayViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Birthday</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthdayDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthdayDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersoneName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersoneName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageName)
        </dt>
        <dd class="col-sm-10">
            <img src="@("~/Images/" + Model.ImageName)" asp-append-version="true" width="250" height="250"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
</div>
<td align="right">
    <form action="/Home/Edit">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Edit Birthday" class="btn btn-outline-secondary" />
    </form>
</td>
<td align="right">
    <form asp-action="RemoveBirthday">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete Birthday" class="btn btn-danger" />
    </form>
</td>
